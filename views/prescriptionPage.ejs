<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Prescriptions</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            background: #f5f5f5;
            padding: 20px;
        }
        .header {
            background: #333;
            color: white;
            padding: 20px;
            margin-bottom: 20px;
            display: flex;
            justify-content: space-between;
            align-items: center;
        }
        .header h1 {
            margin: 0;
        }
        .header a {
            color: white;
            text-decoration: none;
            padding: 8px 15px;
            background: #555;
            border-radius: 3px;
        }
        .header a:hover {
            background: #777;
        }
        .container {
            max-width: 1000px;
            margin: 0 auto;
        }
        .consultation-card {
            background: white;
            border: 1px solid #ddd;
            padding: 20px;
            margin-bottom: 20px;
        }
        .patient-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 15px;
            padding-bottom: 15px;
            border-bottom: 2px solid #f0f0f0;
        }
        .patient-info h3 {
            margin: 0;
            color: #333;
        }
        .patient-details {
            color: #666;
            font-size: 14px;
            margin-top: 5px;
        }
        .consultation-date {
            text-align: right;
            color: #888;
            font-size: 13px;
        }
        .section {
            margin-bottom: 15px;
        }
        .section-title {
            font-weight: bold;
            color: #222;
            margin-bottom: 8px;
            font-size: 14px;
        }
        .section-content {
            background: #f9f9f9;
            padding: 12px;
            border-left: 4px solid #333;
            line-height: 1.5;
            color: #333;
            font-size: 14px;
        }
        .prescription-section {
            margin-top: 20px;
            padding-top: 20px;
            border-top: 2px solid #e0e0e0;
        }
        .prescription-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 15px;
        }
        .prescription-header h4 {
            margin: 0;
            color: #333;
        }
        .prescription-status {
            padding: 5px 12px;
            border-radius: 3px;
            font-size: 13px;
            font-weight: 600;
        }
        .status-pending {
            background: #fff3cd;
            color: #856404;
        }
        .status-completed {
            background: #d4edda;
            color: #155724;
        }
        .prescription-form {
            background: #fafafa;
            padding: 20px;
            border: 1px solid #ddd;
        }
        .form-group {
            margin-bottom: 15px;
        }
        label {
            display: block;
            margin-bottom: 5px;
            color: #333;
            font-weight: 600;
            font-size: 14px;
        }
        label .required {
            color: #c00;
        }
        textarea {
            width: 100%;
            padding: 10px;
            border: 2px solid #ddd;
            box-sizing: border-box;
            font-family: Arial, sans-serif;
            font-size: 14px;
        }
        textarea:focus {
            outline: none;
            border-color: #333;
        }
        .btn-submit {
            background: #333;
            color: white;
            padding: 12px 30px;
            border: none;
            cursor: pointer;
            font-size: 15px;
            font-weight: 600;
        }
        .btn-submit:hover {
            background: #555;
        }
        .prescription-display {
            background: #e8f5e9;
            padding: 15px;
            border-left: 4px solid #4caf50;
            margin-top: 10px;
        }
        .prescription-display h5 {
            margin: 0 0 10px 0;
            color: #2e7d32;
        }
        .prescription-content {
            color: #333;
            line-height: 1.6;
            white-space: pre-wrap;
        }
        .no-consultations {
            text-align: center;
            padding: 40px;
            color: #999;
            background: white;
            border: 1px solid #ddd;
        }
    </style>
</head>
<body>
    <div class="header">
        <h1>Prescriptions & Consultations</h1>
        <a href="/doctorProfile">‚Üê Back to Profile</a>
    </div>

    <div class="container">
        <% if (consultations && consultations.length > 0) { %>
            <% consultations.forEach(consultation => { %>
                <div class="consultation-card">
                    <div class="patient-header">
                        <div class="patient-info">
                            <h3><%= consultation.patientName %></h3>
                            <div class="patient-details">
                                Age: <%= consultation.patientAge %> | Phone: <%= consultation.patientPhone %> | Email: <%= consultation.patientEmail %>
                            </div>
                        </div>
                        <div class="consultation-date">
                            <%= new Date(consultation.submittedAt).toLocaleDateString('en-IN', { year: 'numeric', month: 'short', day: 'numeric' }) %>
                        </div>
                    </div>

                    <div class="section">
                        <div class="section-title">Current Illness/Symptoms</div>
                        <div class="section-content"><%= consultation.currentIllness %></div>
                    </div>

                    <% if (consultation.recentSurgery && consultation.recentSurgery !== 'None') { %>
                        <div class="section">
                            <div class="section-title">Recent Surgery</div>
                            <div class="section-content"><%= consultation.recentSurgery %></div>
                        </div>
                    <% } %>

                    <% if (consultation.surgeryTimespan) { %>
                        <div class="section">
                            <div class="section-title">Time Since Surgery</div>
                            <div class="section-content"><%= consultation.surgeryTimespan %></div>
                        </div>
                    <% } %>

                    <div class="section">
                        <div class="section-title">Family History - Diabetes</div>
                        <div class="section-content"><%= consultation.diabetesHistory ? consultation.diabetesHistory.charAt(0).toUpperCase() + consultation.diabetesHistory.slice(1) : 'Not specified' %></div>
                    </div>

                    <% if (consultation.allergies) { %>
                        <div class="section">
                            <div class="section-title">Allergies</div>
                            <div class="section-content"><%= consultation.allergies %></div>
                        </div>
                    <% } %>

                    <% if (consultation.others) { %>
                        <div class="section">
                            <div class="section-title">Other Information</div>
                            <div class="section-content"><%= consultation.others %></div>
                        </div>
                    <% } %>

                    <!-- prescription section -->
                    <div class="prescription-section">
                        <div class="prescription-header">
                            <h4>Prescription</h4>
                            <span class="prescription-status <%= consultation.prescription ? 'status-completed' : 'status-pending' %>">
                                <%= consultation.prescription ? 'Prescribed' : 'Pending' %>
                            </span>
                        </div>

                        <% if (consultation.prescription) { %>
                            <div class="prescription-display" id="display-<%= consultation.id %>">
                                <h5>Care Instructions:</h5>
                                <div class="prescription-content"><%= consultation.prescription.careToBeTaken %></div>
                                
                                <h5 style="margin-top: 15px;">Medicines:</h5>
                                <div class="prescription-content"><%= consultation.prescription.medicines || 'No medicines prescribed' %></div>
                                
                                <p style="margin-top: 15px; font-size: 12px; color: #666;">
                                    Prescribed on: <%= new Date(consultation.prescription.prescribedAt).toLocaleDateString('en-IN', { year: 'numeric', month: 'short', day: 'numeric', hour: '2-digit', minute: '2-digit' }) %>
                                </p>
                                <% if (consultation.prescription.sentToPatient) { %>
                                    <p style="font-size: 12px; color: #28a745; margin-top: 5px;">
                                        ‚úì Sent to patient on <%= new Date(consultation.prescription.sentAt).toLocaleDateString('en-IN') %>
                                    </p>
                                <% } %>

                                <div style="display: flex; gap: 10px; margin-top: 20px;">
                                    <button onclick="downloadPDF('<%= consultation.id %>')" 
                                            style="flex: 1; background: #007bff; color: white; padding: 10px; border: none; cursor: pointer;">
                                        üìÑ Download PDF
                                    </button>
                                    <button onclick="sendToPatient('<%= consultation.id %>')" 
                                            style="flex: 1; background: #28a745; color: white; padding: 10px; border: none; cursor: pointer;">
                                        üìß Send to Patient
                                    </button>
                                    <button onclick="editPrescription('<%= consultation.id %>')" 
                                            style="flex: 1; background: #ffc107; color: #333; padding: 10px; border: none; cursor: pointer;">
                                        ‚úèÔ∏è Edit
                                    </button>
                                </div>

                                <!-- Custom PDF Upload Section -->
                                <div style="margin-top: 20px; padding: 15px; background: #f0f8ff; border: 1px solid #b3d9ff; border-radius: 5px;">
                                    <h5 style="margin: 0 0 10px 0; color: #0066cc;">üìé Upload Additional PDF</h5>
                                    <form id="pdf-upload-form-<%= consultation.id %>" onsubmit="uploadCustomPDF(event, '<%= consultation.id %>')" style="display: flex; gap: 10px; align-items: flex-end;">
                                        <div style="flex: 1;">
                                            <label style="font-size: 12px; color: #666; margin-bottom: 5px; display: block;">Select PDF file (max 10MB)</label>
                                            <input type="file" id="pdf-file-<%= consultation.id %>" accept=".pdf" required 
                                                   style="width: 100%; padding: 8px; border: 1px solid #ccc; border-radius: 3px;">
                                        </div>
                                        <div style="flex: 1;">
                                            <label style="font-size: 12px; color: #666; margin-bottom: 5px; display: block;">Notes (optional)</label>
                                            <input type="text" id="pdf-notes-<%= consultation.id %>" placeholder="e.g., Lab reports, X-ray results..." 
                                                   style="width: 100%; padding: 8px; border: 1px solid #ccc; border-radius: 3px;">
                                        </div>
                                        <button type="submit" style="background: #0066cc; color: white; padding: 10px 20px; border: none; cursor: pointer; border-radius: 3px; white-space: nowrap;">
                                            üì§ Upload PDF
                                        </button>
                                    </form>
                                </div>

                                <!-- Display uploaded custom PDFs -->
                                <% if (consultation.prescription.customPDFs && consultation.prescription.customPDFs.length > 0) { %>
                                    <div style="margin-top: 15px; padding: 15px; background: #f9f9f9; border-left: 4px solid #0066cc;">
                                        <h5 style="margin: 0 0 10px 0; color: #333;">üìé Attached PDFs:</h5>
                                        <% consultation.prescription.customPDFs.forEach((pdf, index) => { %>
                                            <div style="background: white; padding: 10px; margin-bottom: 8px; border: 1px solid #ddd; border-radius: 3px; display: flex; justify-content: space-between; align-items: center;">
                                                <div>
                                                    <strong><%= pdf.originalName %></strong>
                                                    <% if (pdf.notes) { %>
                                                        <p style="margin: 5px 0 0 0; font-size: 12px; color: #666;"><%= pdf.notes %></p>
                                                    <% } %>
                                                    <p style="margin: 5px 0 0 0; font-size: 11px; color: #999;">
                                                        Uploaded on <%= new Date(pdf.uploadedAt).toLocaleDateString('en-IN', { year: 'numeric', month: 'short', day: 'numeric', hour: '2-digit', minute: '2-digit' }) %>
                                                    </p>
                                                </div>
                                                <button onclick="downloadCustomPDF('<%= pdf.filename %>')" 
                                                        style="background: #007bff; color: white; padding: 8px 15px; border: none; cursor: pointer; border-radius: 3px;">
                                                    üì• Download
                                                </button>
                                            </div>
                                        <% }); %>
                                    </div>
                                <% } %>
                            </div>

                            <form class="prescription-form" id="edit-form-<%= consultation.id %>" style="display: none;" onsubmit="submitPrescription(event, '<%= consultation.id %>')">
                                <div class="form-group">
                                    <label for="edit-care-<%= consultation.id %>">Care to be Taken <span class="required">*</span></label>
                                    <textarea id="edit-care-<%= consultation.id %>" name="careToBeTaken" rows="4" required><%= consultation.prescription.careToBeTaken %></textarea>
                                </div>

                                <div class="form-group">
                                    <label for="edit-medicines-<%= consultation.id %>">Medicines</label>
                                    <textarea id="edit-medicines-<%= consultation.id %>" name="medicines" rows="4"><%= consultation.prescription.medicines || '' %></textarea>
                                </div>

                                <div style="display: flex; gap: 10px;">
                                    <button type="submit" class="btn-submit" style="flex: 1;">Save Changes</button>
                                    <button type="button" onclick="cancelEdit('<%= consultation.id %>')" 
                                            style="flex: 1; background: #6c757d; color: white; padding: 12px; border: none; cursor: pointer;">
                                        Cancel
                                    </button>
                                </div>
                            </form>
                        <% } else { %>
                            <form class="prescription-form" onsubmit="submitPrescription(event, '<%= consultation.id %>')">
                                <div class="form-group">
                                    <label for="care-<%= consultation.id %>">Care to be Taken <span class="required">*</span></label>
                                    <textarea id="care-<%= consultation.id %>" name="careToBeTaken" rows="4" 
                                              placeholder="Instructions for care and precautions..." required></textarea>
                                </div>

                                <div class="form-group">
                                    <label for="medicines-<%= consultation.id %>">Medicines</label>
                                    <textarea id="medicines-<%= consultation.id %>" name="medicines" rows="4" 
                                              placeholder="List of medicines with dosage and frequency..."></textarea>
                                </div>

                                <button type="submit" class="btn-submit">Submit Prescription</button>
                            </form>
                        <% } %>
                    </div>
                </div>
            <% }); %>
        <% } else { %>
            <div class="no-consultations">
                <p>No consultations yet.</p>
            </div>
        <% } %>
    </div>

    <script>
        async function submitPrescription(event, consultationId) {
            event.preventDefault();
            const form = event.target;
            const formData = new FormData(form);
            const data = Object.fromEntries(formData);

            try {
                const response = await fetch('/submitPrescription/' + consultationId, {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                    },
                    body: JSON.stringify(data)
                });

                if (response.ok) {
                    alert('Prescription saved successfully!');
                    window.location.reload();
                } else {
                    const error = await response.json();
                    alert(error.error || 'Failed to submit prescription');
                }
            } catch (error) {
                alert('Network error. Please try again.');
            }
        }

        function editPrescription(consultationId) {
            document.getElementById('display-' + consultationId).style.display = 'none';
            document.getElementById('edit-form-' + consultationId).style.display = 'block';
        }

        function cancelEdit(consultationId) {
            document.getElementById('display-' + consultationId).style.display = 'block';
            document.getElementById('edit-form-' + consultationId).style.display = 'none';
        }

        function downloadPDF(consultationId) {
            window.open('/generatePrescriptionPDF/' + consultationId, '_blank');
        }

        async function sendToPatient(consultationId) {
            if (!confirm('Are you sure you want to send this prescription to the patient?')) {
                return;
            }

            try {
                const response = await fetch('/sendPrescriptionToPatient/' + consultationId, {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                    }
                });

                if (response.ok) {
                    const result = await response.json();
                    alert(result.message);
                    window.location.reload();
                } else {
                    const error = await response.json();
                    alert(error.error || 'Failed to send prescription');
                }
            } catch (error) {
                alert('Network error. Please try again.');
            }
        }

        async function uploadCustomPDF(event, consultationId) {
            event.preventDefault();
            
            const fileInput = document.getElementById('pdf-file-' + consultationId);
            const notesInput = document.getElementById('pdf-notes-' + consultationId);
            
            if (!fileInput.files || fileInput.files.length === 0) {
                alert('Please select a PDF file');
                return;
            }

            const file = fileInput.files[0];
            if (file.size > 10 * 1024 * 1024) {
                alert('File size must be less than 10MB');
                return;
            }

            const formData = new FormData();
            formData.append('pdfFile', file);
            formData.append('notes', notesInput.value);

            try {
                const response = await fetch('/uploadPrescriptionPDF/' + consultationId, {
                    method: 'POST',
                    body: formData
                });

                if (response.ok) {
                    const result = await response.json();
                    alert('PDF uploaded successfully!');
                    window.location.reload();
                } else {
                    const error = await response.json();
                    alert(error.error || 'Failed to upload PDF');
                }
            } catch (error) {
                alert('Network error. Please try again.');
            }
        }

        function downloadCustomPDF(filename) {
            window.open('/downloadPDF/' + filename, '_blank');
        }
    </script>
</body>
</html>
